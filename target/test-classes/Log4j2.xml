<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

>
  <Appenders>
    
    <!-- Console Appender -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    
    <!-- File Appender -->
    <File name="File" fileName="logs/test-log.log" append="true">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
    </File>
    
    <!-- Rolling File Appender -->
    <RollingFile name="RollingFile" fileName="logs/rolling-log.log"
                 filePattern="logs/archive/rolling-log-%d{yyyy-MM-dd}-%i.log.gz">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
      <Policies>
        <TimeBasedTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="1 MB"/>
      </Policies>
    </RollingFile>

  </Appenders>

  <Loggers>
    <!-- Set your project root logger level -->
    <Root level="OFF">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="File"/>
      <AppenderRef ref="RollingFile"/>
    </Root>
  </Loggers>
</Configuration>
